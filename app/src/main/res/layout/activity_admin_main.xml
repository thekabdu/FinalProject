<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin.AdminMain"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Bus"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorPrimary"
        android:textSize="25sp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:textColorHint="@color/colorBlack">

        <EditText
            android:id="@+id/edit_admin_bus_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableStart="@drawable/ic_baseline_directions_bus_24"
            android:drawablePadding="16dp"
            android:fontFamily="@font/open_sans_semibold"
            android:hint="Bus Name"
            android:inputType="text"
            android:maxLines="1"
            android:textColor="@android:color/black"
            android:textSize="16sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:textColorHint="@color/colorBlack">

        <EditText
            android:id="@+id/edit_admin_from"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableStart="@drawable/ic_location_on_light_blue_24dp"
            android:drawablePadding="16dp"
            android:fontFamily="@font/open_sans_semibold"
            android:hint="From"
            android:inputType="text"
            android:maxLines="1"
            android:textColor="@android:color/black"
            android:textSize="16sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:textColorHint="@color/colorBlack">

        <EditText
            android:id="@+id/edit_admin_to"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableStart="@drawable/ic_location_on_light_blue_24dp"
            android:drawablePadding="16dp"
            android:fontFamily="@font/open_sans_semibold"
            android:hint="To"
            android:textColor="@android:color/black"
            android:textSize="16sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <ImageView
        android:id="@+id/admin_departure_date"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="15dp"
        android:src="@drawable/ic_date_range_light_blue_24dp" />

        <TextView
            android:id="@+id/txt_admin_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            tools:text="@tools:sample/date/ddmmyy"
            android:textSize="22sp"
            android:textColor="@color/colorBlack"
            android:fontFamily="@font/open_sans_semibold"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="10dp">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:textColorHint="@color/colorBlack">

            <EditText
                android:id="@+id/edit_admin_num_seats"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableStart="@drawable/ic_seater"
                android:drawablePadding="5dp"
                android:fontFamily="@font/open_sans_semibold"
                android:hint="Number of seats"
                android:inputType="number"
                android:textColor="@android:color/black"
                android:textSize="16sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:textColorHint="@color/colorBlack">

            <EditText
                android:id="@+id/edit_admin_price"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableStart="@drawable/ic_price"
                android:drawablePadding="5dp"
                android:fontFamily="@font/open_sans_semibold"
                android:hint="Price"
                android:textColor="@android:color/black"
                android:textSize="16sp" />
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_add_img_bus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/open_sans_semibold"
        android:layout_margin="15dp"
        android:text="Add photo"
        android:textColor="@android:color/black"
        android:textSize="16sp"/>

    <ImageView
        android:id="@+id/img_bus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        app:srcCompat="@drawable/ic_launcher_background"/>

    <Button
        android:id="@+id/btn_add_bus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        android:background="@color/colorPrimary"
        android:fontFamily="@font/open_sans_semibold"
        android:text="Save"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:textSize="18sp" />

</LinearLayout>